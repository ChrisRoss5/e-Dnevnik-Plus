{
  "manifest_version": 3,
  "name": "e-Dnevnik Vue",
  "description": "Moderna verzija e-Dnevnika za učenike i roditelje.",
  "author": "Kristijan Rosandić",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "declarativeNetRequest"
  ],
  "optional_permissions": [
    "notifications",
    "background"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "128": "assets/img/icon-128.png"
  },
  "action": {
    "default_icon": "assets/img/icon-19-disabled.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://ocjene.skole.hr/*"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "app/index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}